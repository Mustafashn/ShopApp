@model ProductListViewModels

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        <partial name="_search">
    </div>
    <div class="col-md-9">
        <div class="row">
        @foreach(var product in Model.Products){

            <div class="col-md-3">
            @await Html.PartialAsync("_product",product)
            </div>
        }
        </div>
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        @for(int i=1; i<@Model.PageInfo.totalPages()+1; i++) {
                            @if(String.IsNullOrEmpty(Model.PageInfo.CurrentCategory)) {
                                <li class="page-item @(Model.PageInfo.CurrentPage == i ?"active":"")">
                                    <a class="page-link" href="/products?page=@i">
                                        @i
                                    </a>
                                </li>
                            }
                            else {
                                <li class="page-item @(Model.PageInfo.CurrentPage == i ?"active":"")">
                                    <a class="page-link" href="/products/@Model.PageInfo.CurrentCategory?page=@i">
                                        @i
                                    </a>
                                </li>
                            }
                            
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


 @section Scripts{

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
}
