@model ProductListViewModels

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        <partial name="_search">
    </div>
    <div class="col-md-9">
        <div class="row">
        @foreach(var product in Model.Products){

            <div class="col-md-3">
            @await Html.PartialAsync("_product",product)
            </div>
        }
        </div>
        
    </div>
</div>


