@model ProductModel
<h1 class="h3">Create Product</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateProduct" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mt-2">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input  class="form-control" asp-for="Name" >
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-2">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input  class="form-control" asp-for="Url" >
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-2">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input  class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row mt-2">
                <label  asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description" > </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row mt-2">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="form-check col-md-2 mt-2">
                    <input class="form-check-input" type="checkbox" asp-for="isApproved">
                    <label class="form-check-label" asp-for="isApproved">
                    </label>
                </div>
                <div class="form-check col-md-2 offset 8  mt-2">
                    <input class="form-check-input" type="checkbox" asp-for="isHome">
                    <label class="form-check-label" asp-for="isHome">
                    </label>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}