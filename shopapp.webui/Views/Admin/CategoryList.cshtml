@model CategoryListViewModel

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Categories</h1>
        <hr>
        <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-primary btn-sm mb-2">Add Category</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width:30px">Id</td>
                    <td>Name</td>
                    <td style="width:200px">Url</td>
                    <td style="width:150px" ></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Categories.Count > 0) {
                    @foreach(var item in Model.Categories){
                    <tr>
                        <td style="color:red">@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>@item.Url</td>
                        <td>
                            <a href="/admin/categories/edit/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <form action="/admin/deletecategory" method="POST" style="display:inline">
                                <input type="hidden" name="CategoryId" value="@item.CategoryId">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                 }
                }
                else {
                    <div class="alert alert-warning">
                        <h3>No Categories</h3>
                    </div>
                }
                 
            </tbody>
        </table>
    </div>
</div>