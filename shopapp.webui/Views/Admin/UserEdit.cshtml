@model UserModel
<h1 class="h3">Edit Role</h1>
<hr>

<form asp-controller="Admin" asp-action="UserEdit" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">
                <input type="hidden" asp-for="UserId">
                <div class="form-group row mt-2">
                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input  class="form-control" asp-for="FirstName" >
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input  class="form-control" asp-for="LastName" >
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input  class="form-control" asp-for="UserName" >
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input  class="form-control" asp-for="Email" >
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
        </div>
        <div class="col-md-4">
            <h3>Roles</h3>
            @foreach(var roleName in @ViewBag.Roles){
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" name="selectedRoles" value="@roleName" type="checkbox" id="@roleName"@(Model.SelectedRoles.Any(i=> i ==roleName)?"checked":"")>
                    <label class="custom-control-label" for="@roleName">
                        @roleName
                    </label>
                </div>
            }
            <hr>
            <div class="form-group row mt-2">
                <div class="form-check col-md-4 mt-2">
                    <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed">
                    <label class="form-check-label" asp-for="EmailConfirmed">
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
